!!! 5
html
    head
        - if (typeof(title) == 'undefined')
            title Express Starter Template
        - else 
            title= title
    //if lt IE 9
        script(src=base + '/javascripts/html5shiv.js')
    // include default stylesheets and any view stylesheets
    link(rel='stylesheet', href=base + '/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/styles/kendo.common.min.css')
    link(rel='stylesheet', href='/stylesheets/styles/kendo.metro.min.css')
    //if lt IE 9
        link(rel='stylesheet',href='/stylesheets/styleIE8orless.css')



    // include default scripts and any view scripts
    script(src=base + '/javascripts/jquery-1.7.min.js')
    script(src=base + '/javascripts/kendo.web.js')
    //script($(document).ready(function() {$("#menu").kendoMenu();})
body   
    header
        div(class='menu-wrapper')#menu-wrapper
            ul#menu
                li 
                    a(href="/") Home
                li 
                    a(href="/chat") Chat
                li
                    a(href="/about") About
                li#login
                    ul
                    -if(!everyauth.loggedIn)
                        li
                            a(href="/login") Log in
                        li
                            a(href="/register") Register
                    -else
                        -if(everyauth.facebook)
                            li Welcome !{everyauth.facebook.user.first_name} !{everyauth.facebook.user.last_name}!
                        -else if(everyauth.twitter)
                            li Welcome !{everyauth.twitter.user.name}!
                        -else if(everyauth.password)
                            li Welcome !{everyauth.user.email}!
                        li 
                            a(href="/logout") Logout
        div(class='header-content')
            div(class="float-left")
                div(id="logo",class="site-logo")
                    p(class="site-title")
                        a(href="/") baby Hippo.
            div(class="float-right")

    #body!= body
      
    footer
        div(class="content-wrapper")
            div(class="float-left")
                p &copy; !{(new Date()).getFullYear()}
            div(class="float-right")
                ul#social
                    li
                        a(href="http://facebook.com", class="facebook") Facebook
                        a(href="http://twitter.com", class="twitter") Twitter